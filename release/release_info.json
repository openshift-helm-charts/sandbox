{
  "version": "1.5.5",
  "info" : [
    "Ensure chart annotations are merged with generated annotations on index creation"
  ],
  "charts" : {
    "development": {
      "merge": ["charts"]
    }
  },
  "development" : {
    "charts": {
      "replace": [
        ".github",
        "scripts",
        "assets",
        "docs",
        "tests"
      ],
      "ignore" : [".github/workflows/release.yml",
                  ".github/workflows/nightly_test.yml",
                  ".github/workflows/metrics.yml",
                  ".github/workflows/codeql.yml"
                ]
    },
    "stage" : {
      "replace": [
        ".github",
        "scripts",
        "tests"
      ],
      "ignore" : [".github/workflows/release.yml",
                  ".github/workflows/nightly_test.yml",
                  ".github/workflows/metrics.yml",
		              ".github/workflows/token.yml",
		              ".github/workflows/owners.yml",
                  ".github/workflows/version_check.yml",
                  ".github/workflows/codeql.yml"]
    }
  }
}
